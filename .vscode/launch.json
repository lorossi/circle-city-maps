  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Budapest",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/city-cli.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "-c",
        "Budapest",
        "--width",
        "1000",
        "--height",
        "1000",
        "-s",
        "Bauhaus",
        "-o",
        "test",
        "-r",
        "1000"
      ]
    },
    {
      "name": "Python: circle-city.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/circle-city.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "--debug"
      ]
    },
    {
      "name": "Python: compose.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/compose.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}